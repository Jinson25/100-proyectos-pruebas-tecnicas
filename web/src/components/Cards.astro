---
import SocialPill from "./SocialPill.astro";
import { PROJECTS, TAGS } from "../constates.js";
---
<div
  class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
>
  <article
    class="min-h-60 relative items-center text-black rounded-lg bg-purple-50"
  >
    <span
      class="group hover:scale-110 transition flex justify-center flex-col h-full items-center font-semibold text-yellow-400 text-center text-xl cursor-pointer"
    >
      <svg
        class="w-16 h-16 mb-2"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M7 8l-4 4l4 4"></path>
        <path d="M17 8l4 4l-4 4"></path>
        <path d="M14 4l-4 16"></path>
      </svg>
      Pr√≥ximamente el<br />
      siguiente proyecto...
    </span>
  </article>
  {
    PROJECTS.map((project) => (
      <div class="flex flex-col items-center justify-between p-4 border-2 border-yellow-200 rounded-lg shadow-lg h-full text-center">
        <div class="space-y-4">
          <h2 class="text-2xl text-yellow-400 font-bold">{project.title}</h2>
          <p class="text-lg">{project.description}</p>
          <nav class="flex gap-2 flex-wrap justify-center">
            {TAGS.map((tag) => (
              <SocialPill href={tag.link} class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>{tag.title}</SocialPill>
            ))}
          </nav>
        </div>
        <img
          class="w-full rounded-lg overflow-hidden object-cover aspect-video"
          src={project.image}
          alt={project.title}
        />
      </div>
    ))
  }
</div>
